
<MainWid>:
	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size


<StartWid>:
	orientation: 'vertical'

	canvas:
		Color:
			rgb: 0.3, 0.3, 0.9
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		size_hint_y: 0.7

	Button:
		text: "Conectar a Base de dados"
		size_hint_y: 0.1
		on_press: root.create_db()

	BoxLayout:
		size_hint_y: 0.2


<DataWid>:
	data: ''
	data_id: ''
	canvas:
		Color:
			rgb: 0.2, 0.2, 0.2
		Rectangle:
			size: self.size
			pos: self.pos

	Label:
		size_hint_x: 0.9
		text: root.data

	Button:
		text: 'Edit'
		size_hint_x: 0.1
		on_press: root.update(root.data_id)


<NewButton>:
	font_size: self.height * 0.5
	text: '+'
	on_press: root.create_product()


<DataBaseWid>:
	canvas:
		Color:
			rgb: 0.3, 0.3, 0.9
		Rectangle:
			pos: self.pos
			size: self.size

	ScrollView:
		size: self.size

		GridLayout:
			id: container
			padding: [10, 10, 10, 10]
			spacing: 5
			size_hint_y: None
			cols: 1
			row_default_height: root.height * 0.2
			height: self.minimum_height

<LeftLabel@Label>:
	text_size: self.size
	halign: 'left'


<MessagePopup>:

	BoxLayout:
		orientation: 'vertical'

		Label:
			id: msg
			size_hint: 1, 0.8
			text: ''

		Button:
			size_hint: 1, 0.2
			text: 'Regressar'
			on_press: root.dismiss()


<InsertDataWid>:
	orientation: 'vertical'

	canvas:
		Color:
			rgb: 0.3, 0.3, 0.9
		Rectangle:
			pos: self.pos
			size: self.size

	LeftLabel:
		text: 'ID'

	TextInput:
		id: input_id
		multiline: False
		hint_text: 'ID'
		padding: [5, 10, 0, 0]

	LeftLabel:
		text: 'nome'

	TextInput:
		id: input_nome
		multiline: False
		hint_text: 'nome'

	LeftLabel:
		text: 'marca'

	TextInput:
		id: input_marca
		multiline: False
		hint_text: 'marca'

	LeftLabel:
		text: 'valor'

	TextInput:
		id: input_valor
		multiline: False
		hint_text: 'valor'

	BoxLayout:
		size_hint_y: 5

	BoxLayout:

		Button:
			text: 'Sair'
			on_press: root.back()

		Button:
			text: 'Salvar'
			on_press: root.save()


<UpdateDataWid>:
	data_id: ''
	orientation: 'vertical'

	canvas:
		Color:
			rgb: 0.3, 0.3, 0.9
		Rectangle:
			pos: self.pos
			size: self.size

	LeftLabel:
		text: 'ID: ' + root.data_id

	LeftLabel:
		text: 'nome'

	TextInput:
		id: input_nome
		multiline: False
		hint_text: 'nome'

	LeftLabel:
		text: 'marca'

	TextInput:
		id: input_marca
		multiline: False
		hint_text: 'marca'

	LeftLabel:
		text: 'valor'

	TextInput:
		id: input_valor
		multiline: False
		hint_text: 'valor'

	BoxLayout:
		size_hint_y: 4

	BoxLayout:

		Button:
			text: 'deletar'
			on_press: root.deletar()

		Button:
			text: 'update'
			on_press: root.update()

	BoxLayout:

		Button:
			text: 'Sair'
			on_press: root.close()

