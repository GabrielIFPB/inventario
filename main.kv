
<MainWid>:
	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size


<StartWid>
	orientation: 'vertical'

	canvas:
		Color:
			rgb: 0.3, 0.3, 0.9
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		size_hint_y: 0.7

	Button:
		text: "Conectar aa Base de dados"
		size_hint_y: 0.1
		on_press: root.create_db()

	BoxLayout:
		size_hint_y: 0.2
